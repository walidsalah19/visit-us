<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.setting"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_baseline_person_24" />
        <View
            android:id="@+id/view1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="5dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="16sp"
                android:id="@+id/edit_profile_setting"
                android:textColor="@color/black"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="16sp"
                android:id="@+id/change_password"
                android:textColor="@color/black"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_baseline_tune_24" />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="5dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginEnd="5dp"/>


            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_baseline_read_more_24" />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="5dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="language"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp" />


        </LinearLayout>
    </LinearLayout>



</ScrollView>