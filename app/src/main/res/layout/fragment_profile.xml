<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/background_color"
    android:layout_width="match_parent"
    tools:context=".user.user_profile"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/m_appbar_main"
        android:background="?attr/color3"
        app:titleTextColor="?attr/textcolor"
        app:title="Visit us"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="?attr/background_color"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:civ_border_width="1dp"
            app:civ_border_color="?attr/color1"
            android:id="@+id/circl_imag"
            android:src="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_pro"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                app:civ_border_color="?attr/color1"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="@id/circl_imag"
                app:layout_constraintStart_toStartOf="@id/circl_imag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_shape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_shape"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_person_24"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pr_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="?attr/textcolor"
                android:padding="5dp"
                />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_shape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_shape"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_email_24"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pr_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:padding="5dp"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="?attr/textcolor"
                android:forceHasOverlappingRendering="true"
               />

        </LinearLayout>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="?attr/textcolor"
        android:background="?attr/color2"
        android:text="@string/add_profile"
        android:textAllCaps="false"
        android:textSize="18sp" />
</LinearLayout>