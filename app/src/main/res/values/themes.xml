<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFBB86FC</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color1">#202214</item>
        <item name="color2">#767a5f</item>
        <item name="color3">#919d79</item>
        <item name="textcolor">#050505</item>
        <item name="background_color">#FFFFFFFF</item>
    </style>
    <style name="Toolbar" parent="Widget.AppCompat.SearchView" >
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">?attr/textcolor</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">?attr/textcolor</item>
    </style>
</resources>